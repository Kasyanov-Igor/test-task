<Window x:Class="TestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counterparties" Height="350" Width="525">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10" >
            <Button Content="Load" Command="{Binding LoadCommand}" Width="75" Margin="0,0,10,0"/>
            <Button Content="Add" Command="{Binding AddCommand}" Width="75" Margin="0,0,10,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" Width="75"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Counterparties}" SelectedItem="{Binding SelectedCounterparty}" DisplayMemberPath="Name"/>
    </DockPanel>
</Window>
